# Technical Blog Monitor - Environment Configuration

#######################
# Application Settings
#######################
APP_NAME=technical-blog-monitor
VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true

# Base paths for data storage
BASE_DIR=.
DATA_DIR=./data

#######################
# Feed Configuration
#######################
# Uber Engineering Blog configuration
FEEDS__0__NAME=Uber Engineering Blog
FEEDS__0__URL=https://www.uber.com/en-US/blog/engineering/
FEEDS__0__CHECK_INTERVAL_MINUTES=60
FEEDS__0__MAX_POSTS_PER_CHECK=10
FEEDS__0__ENABLED=true

#######################
# Browser Configuration
#######################
BROWSER__HEADLESS=true
BROWSER__BROWSER_TYPE=chromium
BROWSER__TIMEOUT_SECONDS=30
BROWSER__VIEWPORT_WIDTH=1280
BROWSER__VIEWPORT_HEIGHT=800
BROWSER__USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36
BROWSER__WAIT_UNTIL=networkidle
BROWSER__SCREENSHOT_FULL_PAGE=true
BROWSER__SCREENSHOT_FORMAT=png
BROWSER__MAX_CONCURRENT_BROWSERS=2
BROWSER__DISABLE_JAVASCRIPT=false
BROWSER__BLOCK_ADS=true
BROWSER__STEALTH_MODE=true

#######################
# Cache Configuration
#######################
CACHE__ENABLED=true
# Using filesystem cache for testing
CACHE__REDIS_URL=
CACHE__CACHE_TTL_HOURS=24
CACHE__LOCAL_STORAGE_PATH=./cache

#######################
# Embedding Configuration
#######################
# Using dummy embedding model for testing
EMBEDDING__TEXT_MODEL_TYPE=custom
EMBEDDING__TEXT_MODEL_NAME=dummy-text-model
EMBEDDING__IMAGE_MODEL_TYPE=custom
EMBEDDING__IMAGE_MODEL_NAME=dummy-image-model
EMBEDDING__EMBEDDING_DIMENSIONS=1536
EMBEDDING__BATCH_SIZE=8
EMBEDDING__MAX_RETRIES=3
EMBEDDING__TIMEOUT_SECONDS=30
EMBEDDING__USE_GPU=false

#######################
# Vector DB Configuration
#######################
# Using in-memory vector DB for testing
VECTOR_DB__DB_TYPE=qdrant
VECTOR_DB__CONNECTION_STRING=memory://
VECTOR_DB__COLLECTION_NAME=uber_engineering_posts
VECTOR_DB__TEXT_VECTOR_DIMENSION=1536
VECTOR_DB__IMAGE_VECTOR_DIMENSION=512
VECTOR_DB__DISTANCE_METRIC=cosine
VECTOR_DB__BATCH_SIZE=100

#######################
# Scheduler Configuration
#######################
SCHEDULER__JOB_STORE_TYPE=memory
SCHEDULER__MAX_INSTANCES=1
SCHEDULER__TIMEZONE=UTC
SCHEDULER__COALESCE=true
SCHEDULER__MISFIRE_GRACE_TIME=60

#######################
# Metrics Configuration
#######################
METRICS__ENABLED=true
METRICS__PROMETHEUS_ENABLED=false
METRICS__LOG_METRICS=true
METRICS__LOG_LEVEL=DEBUG
METRICS__STRUCTURED_LOGGING=false

#######################
# Runtime Settings
#######################
MAX_CONCURRENT_TASKS=5
REQUEST_TIMEOUT_SECONDS=30
BACKOFF_MAX_RETRIES=3
BACKOFF_MAX_TIME=60
